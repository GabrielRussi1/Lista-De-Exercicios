#include <stdio.h>

int main() {
    float salario, porcentagem, aumento, novo_salario;

    printf("Digite o valor do salário: R$ ");
    scanf("%f", &salario);
    
    printf("Digite a porcentagem de aumento: ");
    scanf("%f", &porcentagem);

    // Cálculo do aumento e do novo salário
    aumento = (salario * porcentagem) / 100;
    novo_salario = salario + aumento;

    // Saída do resultado
    printf("Valor do aumento: R$ %.2f\n", aumento);
    printf("Novo salário: R$ %.2f\n", novo_salario);

    return 0;
}
