#include <stdio.h>

int main() {
    float raio, area;
    const float PI = 3.14;  // Definição de PI como constante

    // Entrada de dados
    printf("Digite o raio da pizza (em cm): ");
    scanf("%f", &raio);

    // Cálculo da área
    area = PI * (raio * raio);

    // resultado
    printf("A área da pizza é: %.2f cm²\n", area);

    return 0;
}
